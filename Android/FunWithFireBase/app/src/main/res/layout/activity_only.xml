<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arjan.funwithfirebase.OnlyActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="375dp"
        android:layout_height="0dp"
        android:id="@+id/currUserTxtVw"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/FireBase_imageView2"
        app:layout_constraintRight_toRightOf="@+id/FireBase_imageView1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/FireBase_imageView1" />
    <ImageView
        android:id="@+id/FireBase_imageView1"
        android:layout_width="193dp"
        android:layout_height="240dp"
        app:srcCompat="@drawable/common_full_open_on_phone"

        android:layout_marginStart="2dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="106dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/FireBase_imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/common_full_open_on_phone"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/FireBase_imageView1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/FireBase_imageView1"
        app:layout_constraintLeft_toRightOf="@+id/FireBase_imageView1" />
   <Button
       android:layout_width="0dp"
       android:layout_height="53dp"
       android:text="Sign Out"
       android:id="@+id/SignOutBtn"
       tools:layout_constraintRight_creator="1"
       tools:layout_constraintBottom_creator="1"
       android:layout_marginStart="6dp"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginEnd="6dp"
       app:layout_constraintRight_toRightOf="parent"
       tools:layout_constraintLeft_creator="1"
       android:layout_marginBottom="87dp"
       app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Three Men Morris!"
            android:textSize="30dp"
            android:textColor="#ebf442"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.01"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1" />



    <TextView
        android:id="@+id/t00"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#C0C1CB"
        android:text="   "
        android:textSize="30dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/t10"
        app:layout_constraintBaseline_toBaselineOf="@+id/t01"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/t10"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/t01"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="#C0C1CB"
        android:text="   "
        android:textSize="30dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/t02"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/t02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#C0C1CB"
        android:text="   "
        android:textSize="30dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/t12"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/t12" />

    <TextView
        android:id="@+id/t10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#C0C1CB"
        android:text="   "
        android:textSize="30dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/t20"
        app:layout_constraintBaseline_toBaselineOf="@+id/t11"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/t20" />

    <TextView
        android:id="@+id/t11"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="#C0C1CB"
        android:text="   "
        android:textSize="30dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/t01"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/t12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#C0C1CB"
        android:text="   "
        android:textSize="30dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/t22"
        app:layout_constraintBaseline_toBaselineOf="@+id/t11"

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ibeis.wildbook.wildbook">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-feature android:name="android.hardware.camera2.full" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/wildbook2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/wildbook2"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".DisplaySelectedImages"
            android:noHistory="false" />
        <activity android:name=".DisplayImagesUsingRecyclerView" />
        <activity
            android:name=".CameraMainActivity"
            android:noHistory="true" />
        <activity android:name=".UploadCamPics" />

        <service android:name=".SyncerService" />

        <activity android:name=".ImageViewActivity" />
        <!--<receiver
            android:name=".NetworkScanner"
            android:enabled="true"
            android:label="WiFi Scanner Broadcast Receiver">
        <intent-filter android:priority="10">
            <action android:name="android.net.wifi.STATE_CHANGE"></action>
        </intent-filter>
        </receiver>-->
    </application>

</manifest>
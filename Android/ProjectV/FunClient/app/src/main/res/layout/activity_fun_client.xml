<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arjan.funclient.FunClient"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/_tv1"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text="Click a Button to get a Picture"
        android:textSize="20dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/pic1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/song1"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="1"

        app:layout_constraintBaseline_toBaselineOf="@+id/song2"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/_tv2"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp" />

    <Button
        android:id="@+id/pic1"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="1"

        app:layout_constraintBaseline_toBaselineOf="@+id/pic2"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/_tv1" />

    <Button
        android:id="@+id/song2"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="2"
        android:layout_marginStart="4dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="77dp"
        app:layout_constraintLeft_toRightOf="@+id/song1"
        android:layout_marginLeft="4dp" />

    <Button
        android:id="@+id/pic2"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="2"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/pic3"
        app:layout_constraintLeft_toRightOf="@+id/pic1" />

    <Button
        android:id="@+id/song3"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="3"
        android:layout_marginStart="11dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/song2"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/song2"
        android:layout_marginLeft="11dp" />

    <Button
        android:id="@+id/pic3"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="31dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="313dp"
        android:layout_height="259dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintRight_toLeftOf="@+id/pic1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/pic1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/_tv2"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="53dp"
        android:layout_marginStart="53dp"
        android:text="Click a Button to play a song"
        android:textSize="20dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/song3"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:layout_marginLeft="0dp"
        android:text="Stop"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/pause"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/stop"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/song1"
        app:layout_constraintRight_toRightOf="@+id/song1"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />


</android.support.constraint.ConstraintLayout>
